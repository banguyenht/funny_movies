<style>
  .movie {
    display: flex;
    margin-left: 25%;
    margin-right: 25%;
    margin-top: 40px;
  }
  .movies .movie-info {
    margin-left: 20px;
  }
  .movies .title {
    color: red;
  }
</style>
<div class="movies">
  <% @movies.each do |movie| %>
    <div class="movie">
      <iframe width="420" height="315"
        src="https://www.youtube.com/embed/tgbNymZ7vqY">
      </iframe>
      <div class="movie-info">
        <p class="title">Movile title</p>
        <p>share by me</p>
        <span>99 <i class="fa fa-thumbs-up" aria-hidden="true"></i> 7 <i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
        <p>Description:</p>
        <p>abcd</p>
      </div>
    </div>
  <% end %>
</div>
<%= paginate @movies %>